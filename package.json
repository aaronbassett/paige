{
  "name": "@paige/backend",
  "version": "1.0.0",
  "description": "Paige backend server â€” the Brain tier of an AI coaching tool for junior developers",
  "type": "module",
  "private": true,
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:unit": "vitest run --project unit",
    "test:integration": "vitest run --project integration",
    "test:contract": "vitest run --project contract",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist/ node_modules/",
    "prepare": "husky"
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "eslint --max-warnings=0 --no-warn-ignored",
      "prettier --check"
    ]
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.41",
    "@anthropic-ai/sdk": "^0.74.0",
    "@chroma-core/default-embed": "^0.1.9",
    "@logtape/logtape": "^2.0.2",
    "@logtape/pretty": "^2.0.2",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "better-sqlite3": "^12.6.2",
    "chokidar": "^5.0.0",
    "chromadb": "^3.3.0",
    "diff": "^8.0.3",
    "keyv": "^5.6.0",
    "kysely": "^0.28.11",
    "octokit": "^5.0.5",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@modelcontextprotocol/inspector": "^0.20.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/diff": "^8.0.0",
    "@types/node": "^25.2.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "playwright": "^1.58.2",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
